{
  "manifest_version": 2,
  "name": "Approve CircleCI",
  "description": "Approve Holded CircleCI job from GitHub page",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "https://github.com/*",
    "https://api.circleci.com/graphql-unstable",
    "https://circleci.com/api/v1",
    "activeTab",
    "storage"
  ]
}
